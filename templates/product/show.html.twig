{% extends 'base.html.twig' %}



{% block body %}
    <title>Producto</title>
    <h1>Producto</h1>

    <table class="table">
        <tbody>
            {% if is_granted('ROLE_ADMIN') %}
                <tr>
                    <th>Id del producto</th>
                    <td>{{ product.idproduct }}</td>
                </tr>   
            {% endif %}
            <tr>
                <th>Tipo</th>
                <td>{{ product.tipo }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ product.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ product.descripcion }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ product.precio }}$</td>
            </tr>
            <tr>
                <th>Descuento</th>
                <td>{{ product.descuento }}%</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ product.fecha ? product.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Hora</th>
                <td>{{ product.hora ? product.hora|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_product_index') }}">Volver al Listado</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-warning" href="{{ path('app_product_edit', {'idproduct': product.idproduct}) }}">Editar</a>
        {{ include('product/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
