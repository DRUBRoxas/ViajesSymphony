<form method="post" action="{{ path('app_product_delete', {'idproduct': product.idproduct}) }}" onsubmit="return confirm('¿Estás seguro de que quieres borrar este producto?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.idproduct) }}">
    <button class="btn btn-outline-danger col">Borrar</button>
</form>
